{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "*": ["*"]
      }
    },
    "include": [
      "tests/**/*",
      "ui/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }